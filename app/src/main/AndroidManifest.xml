<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atsoft.dhinamorukural">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR"/>
    <uses-permission-sdk-23 android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission-sdk-23 android:name="android.permission.EXPAND_STATUS_BAR"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/thiruvalluvar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/thiruvalluvar"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".PopUpService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".PopUpReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".AlertDialog"
            android:label="@string/todays_kural"
            android:theme="@style/Theme.AppCompat.Light.Dialog"></activity>
    </application>

</manifest>