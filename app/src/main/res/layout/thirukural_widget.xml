<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wid_top_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/brownbg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appwidget_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin5"
                android:layout_weight="1"
                android:contentDescription="@string/appwidget_text"
                android:text="@string/appwidget_text"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/dark_red"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/kural_no_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:paddingStart="@dimen/margin5"
                android:paddingEnd="@dimen/margin5"
                android:text="1330 - arathupal"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/Black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/wid_share_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/indrayakural_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <Button
                    android:id="@+id/wid_share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="@string/share_wid"
                    android:textAppearance="?android:textAppearanceButton"
                    android:textColor="@color/blue" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>