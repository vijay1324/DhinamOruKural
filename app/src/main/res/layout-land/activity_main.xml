<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@drawable/brownbg"
    tools:context="com.atsoft.dhinamorukural.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
                <ImageButton
                    android:layout_width="@dimen/nav_img_size"
                    android:layout_height="@dimen/nav_img_size"
                    android:id="@+id/pre_img_btn"
                    android:layout_marginLeft="@dimen/margin10"
                    android:scaleType="fitCenter"
                    android:layout_gravity="left"
                    android:background="@android:color/transparent"
                    android:src="@drawable/previous"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paltv"
                android:layout_marginTop="@dimen/margin10"
                android:text="அறத்துப்பால்"
                android:gravity="center"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/header_text_land"
                android:typeface="normal"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kuraliyal"
                    android:paddingLeft="@dimen/margin10"
                    android:textStyle="bold"
                    android:textSize="@dimen/sub_header_land"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:id="@+id/iyaltv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:paddingBottom="@dimen/margin5"
                    android:paddingLeft="3dp"
                    android:text="அரசியல்."
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sub_header_land"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kuralno"
                    android:paddingLeft="@dimen/margin10"
                    android:textStyle="bold"
                    android:textSize="@dimen/sub_header_land"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:id="@+id/kuralnotv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/margin10"
                    android:text="1320"
                    android:textSize="@dimen/sub_header_land"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/athigaramtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin5"
                android:text="பொச்சாவாமை"
                android:textColor="@android:color/black"
                android:textSize="@dimen/header_text_land"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin5"
                android:background="@android:color/holo_blue_dark" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="@dimen/margin10">

                <TextView
                    android:id="@+id/thirukuraltv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingBottom="@dimen/margin5"
                    android:paddingLeft="@dimen/margin15"
                    android:paddingRight="@dimen/margin5"
                    android:paddingTop="@dimen/margin5"
                    android:textSize="@dimen/normal_text_land"
                    android:text="பொச்சாப்புக் கொல்லும் புகழை அறிவினை \nநிச்ச நிரப்புக்கொன் றாங்கு."
                    android:textColor="@color/dark_red"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/margin5"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/eng_thirukuraltv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/margin5"
                    android:textSize="@dimen/normal_text_land"
                    android:text="Perpetual, poverty is death to wisdom of the wise; When man forgets himself his glory dies!."
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </ScrollView>
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/villaka_vurai"
                android:padding="@dimen/margin10"
                android:gravity="center"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/header_text_land"
                android:typeface="normal"
                android:textStyle="bold"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/_fab_scrollView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_saloman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin5"
                    android:text="@string/soloman_urai"
                    android:textColor="@color/dark_red"
                    android:textSize="@dimen/normal_text_land"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/exp_salamon_tv"
                    android:padding="@dimen/margin5"
                    android:textSize="@dimen/normal_text_land"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin15"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_mk"
                    android:text="@string/mk_urai"
                    android:textColor="@color/dark_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_land"
                    android:padding="@dimen/margin5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/exp_mk_tv"
                    android:padding="@dimen/margin5"
                    android:textSize="@dimen/normal_text_land"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin15"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_varathu"
                    android:text="@string/varathu_urai"
                    android:textColor="@color/dark_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_land"
                    android:padding="@dimen/margin5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/exp_varathu_tv"
                    android:padding="@dimen/margin5"
                    android:textSize="@dimen/normal_text_land"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin15"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_paramal"
                    android:text="@string/parimal_urai"
                    android:textColor="@color/dark_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_land"
                    android:padding="@dimen/margin5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/exp_pari_tv"
                    android:padding="@dimen/margin5"
                    android:textSize="@dimen/normal_text_land"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin15"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_mana"
                    android:text="@string/manakudavar_urai"
                    android:textColor="@color/dark_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_land"
                    android:padding="@dimen/margin5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/exp_manakuavar_tv"
                    android:padding="@dimen/margin5"
                    android:textSize="@dimen/normal_text_land"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin15"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin15"
                    android:textSize="@dimen/normal_text_land"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_explain"
                    android:text="@string/eng_exp"
                    android:textColor="@color/dark_red"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_land"
                    android:padding="@dimen/margin5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/exp_english_tv"
                    android:padding="@dimen/margin5"
                    android:textSize="@dimen/normal_text_land"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </ScrollView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin20"
                android:visibility="gone"
                android:clickable="true"
                android:src="@drawable/ic_fullscreen_white_24dp"
                android:backgroundTint="@color/colorPrimary"
                android:scaleType="fitCenter"
                app:layout_anchor="@id/_fab_scrollView"
                app:fabSize="mini"
                app:layout_anchorGravity="top|end|right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="@dimen/nav_img_size"
                android:layout_height="@dimen/nav_img_size"
                android:id="@+id/nxt_img_btn"
                android:scaleType="fitCenter"
                android:layout_marginRight="@dimen/margin10"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                android:src="@drawable/next"/>
        </LinearLayout>

        </LinearLayout>
        <com.google.android.gms.ads.AdView
            android:id="@+id/main_adView"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id_main" />
    </LinearLayout>
    <android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    app:headerLayout="@layout/nav_header_main"
    app:menu="@menu/activity_main_drawer"
    app:theme="@style/AppTheme.DrawerTheme"/>
    <!--<ListView
        android:id="@+id/mylistview"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_key"
        android:divider="#FFFFFF"
        android:dividerHeight="1dp"
        android:smoothScrollbar="true"
        android:layout_gravity="left"/>-->
</android.support.v4.widget.DrawerLayout>